<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Coffee Shop</h1>
    </div>
  </div>
  <hr>
  <h2>Place a New Coffee Order</h2>

  <form name="order" class="create-form">
    <div class="form-group">
      <label for="ca">Coffee Flavour:</label>
      <input type="text" id="ca" name="name">
      <button type="submit" class="btn btn-warning">Place Order</button>
    </div>
  </form>

  <div class="row">
    <div class="col-md-6">
      <h2>Coffee Order Line-up</h2>
      <ol>
        {{#each this}} {{#if drink}}
        <li>
          {{name}}
          <button type="button" id="update-drink-{{id}}" data-id="{{id}}" class="btn btn-light btn-sm update-drink" name="drink">SluRRp</button>
        </li>
        {{/if}} {{/each}}
      </ol>
    </div>
    <div class="col-md-6">
      <h2>Past orders</h2>
      <ol>
        {{#each this}} {{#unless drink}}
        {{#if name}}
        <li>
          {{name}}
        </li>
        {{/if}}
        {{/unless}} {{/each}}
      </ol>
    </div>
  </div>
</div>